{
  "singleQuote": true,
  "arrowParens": "always",
  "max-len": ["error", 120, 2],
  "tabWidth": 2,
  "semi": false,
  "useTabs": true,
  "trailingComma": "none",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^(utils)|^(helpers)",
    "^(types)",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
